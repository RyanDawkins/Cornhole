<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <include layout="@layout/toolbar"/>

        </android.support.design.widget.AppBarLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- The team layouts should probably be added programmatically -->
            <LinearLayout
                android:id="@+id/team_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/team1"
                    android:text="0"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#eee"
                    android:background="@drawable/circle1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />

                <View
                    android:layout_width="1dp"
                    android:background="#e1e1e1"
                    android:layout_height="75dp"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/team2"
                    android:text="0"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#eee"
                    android:background="@drawable/circle2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/team1add1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:background="@drawable/btn_number_add"
                            android:text="+1"
                            android:textColor="#eeeeee"
                            />

                        <Button
                            android:id="@+id/team1add3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_number_add"
                            android:text="+3"
                            android:textColor="#eeeeee"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/team1sub1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:background="@drawable/btn_number_subtract"
                            android:text="-1"
                            android:textColor="#eeeeee"
                            />

                        <Button
                            android:id="@+id/team1sub3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_number_subtract"
                            android:text="-3"
                            android:textColor="#eeeeee"
                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/team2add1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:background="@drawable/btn_number_add"
                            android:text="+1"
                            android:textColor="#eeeeee"
                            />

                        <Button
                            android:id="@+id/team2add3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_number_add"
                            android:text="+3"
                            android:textColor="#eeeeee"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/team2sub1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:background="@drawable/btn_number_subtract"
                            android:text="-1"
                            android:textColor="#eeeeee"
                            />

                        <Button
                            android:id="@+id/team2sub3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_number_subtract"
                            android:text="-3"
                            android:textColor="#eeeeee"
                            />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/nextRoundBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary"
            android:text="NEXT ROUND"
            android:textColor="#eeeeee"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>